<div class="table">
  <% if @exams != nil %>
    
    <%= table_for @exams, html: {id: 'exams', class: 'summary table table-striped table-bordered table-condensed'} do -%>
      <% column title: 'Nombre' do |exam| %>
        <% link_to(exam.name, exam_path(exam.id)) %>
      <% end %>
      <% column :attempts, title: 'Intentos restantes' %>
      <% column :startDate, title: 'Inicio' %>
      <% column :finishDate, title: 'Fin' %>
    <% end %>

  <% else %>
    
    <table class="table table-striped table-bordered table-condensed">
      <tbody>
        <tr>
          <td style='text-align: center; height: 60px; vertical-align: middle;'><span style='font-size: 30px; font-color: black; font-weight: bold;'>No hay ex√°menes disponibles</span></td>
        </tr>
      </tbody>
    </table>
  
  <% end %>
</div>