<div class="table">
  <% if @exam != nil %>
    
    <table id="results" class="summary table table-striped table-bordered table-condensed">
      <tbody>
        <tr>
          <th>Intento</th>
          <th>Calificaci√≥n</th>
          <th>Fecha</th>
        </tr>
        <tr>
          <td><%= @exam.attemptnumber %></td>
          <td><%= @exam.score %></td>
          <td><%= @exam.updated_at %></td>
        </tr>
      </tbody>
    </table>

    <% if check_admin %>
      <%= link_to "Continuar", exams_path, class: "btn" %>
